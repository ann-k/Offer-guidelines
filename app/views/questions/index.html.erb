<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center col-8 mr-auto ml-auto mt-4 mb-5">
  <h1 class="h1-index">Вопросы</h1>
  <div class="actions">
    <%= link_to 'Задать запрос', new_question_path, :class => 'btn btn-primary' %>
  </div>
</div>

<div class="d-flex flex-wrap col-8 m-auto justify-content-between">
  <% @questions.each do |question| %>
    <div class="card mb-5" style="width: 27rem;">
      <div class="card-body">
        <p>Имя: <%= question.name %></p>
        <p>Вопрос: <%= question.question %></p>
        <p>Контакты: <%= question.contacts %></p>
      </div>
    </div>
  <% end %>
</div>
