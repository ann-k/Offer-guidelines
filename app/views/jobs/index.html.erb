<div class="d-flex justify-content-between align-items-center col-9 mr-auto ml-auto mt-4 mb-5">
  <h1 class="h1-index">Вакансии</h1>
  <div class="actions">
    <%= link_to 'Разместить вакансию', new_step_1_jobs_path, :class => 'btn btn-primary' %>
  </div>
</div>

<div class="d-flex flex-wrap col-9 m-auto justify-content-between">
  <% @jobs.each do |job| %>
    <div class="card mb-5" style="width: 18rem;">
      <div class="card-body">
        <p>Название компании: <%= job.company_name %></p>
        <p>На позицию: <%= job.position %></p>
        <p>Занятость: <%= job.schedule %></p>
        <p>Зарплата: от <%= job.salary_min %> до <%= job.salary_max %> рублей в месяц</p>
        <p>Дедлайн заявки:
          <% if job.deadline_none == true %>
            <%= "Бессрочно" %>
          <% else %>
            <%= job.deadline %>
          <% end %>
        </p>

        <div class="actions">
          <%= link_to 'Подробнее', job, :class => 'btn btn-outline-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
