<div class="d-flex justify-content-between align-items-center col-9 mr-auto ml-auto mt-4 mb-5">
  <h1 class="h1-index">Стажировки</h1>
  <div class="actions">
    <%= link_to 'Разместить стажировку', new_step_1_internships_path, :class => 'btn btn-primary' %>
  </div>
</div>


<div class="d-flex flex-wrap col-9 m-auto justify-content-between">
  <% @internships.each do |internship| %>
    <div class="card mb-5" style="width: 18rem;">
      <div class="card-body">
        <p>Название компании: <%= internship.company_name %></p>
        <p>На позицию: <%= internship.position %></p>
        <p>Занятость: <%= internship.schedule %></p>
        <p>Зарплата: от <%= internship.salary_min %> до <%= internship.salary_max %> рублей в месяц</p>
        <p>Дедлайн заявки:
          <% if internship.deadline_none == true %>
            <%= "Бессрочно" %>
          <% else %>
            <%= internship.deadline %>
          <% end %>
        </p>

        <div class="actions">
          <%= link_to 'Подробнее', internship, :class => 'btn btn-outline-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
