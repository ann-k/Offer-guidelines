<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :position %>
    <%= form.text_field :position %>
  </div>

  <div class="field">
    <%= form.label :task_description %>
    <%= form.text_area :task_description %>
  </div>

  <div class="field">
    <%= form.label :task_materials %>
    <%= form.file_field :task_materials %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_select :deadline %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.number_field :salary %>
  </div>

  <div class="field">
    <%= form.label :correction_charge %>
    <%= form.number_field :correction_charge %>
  </div>

  <div class="field">
    <%= form.label :barter %>
    <%= form.text_area :barter %>
  </div>

  <% form.number_field :step, value: 2 %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path %>
