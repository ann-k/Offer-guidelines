<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company specialty</th>
      <th>Company description</th>
      <th>Social network link</th>
      <th>Position</th>
      <th>Task description</th>
      <th>Task materials</th>
      <th>Deadline</th>
      <th>Salary</th>
      <th>Correction charge</th>
      <th>Barter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.company_name %></td>
        <td><%= task.company_specialty %></td>
        <td><%= task.company_description %></td>
        <td><%= task.social_network_link %></td>
        <td><%= task.position %></td>
        <td><%= task.task_description %></td>
        <td><%= task.task_materials %></td>
        <td><%= task.deadline %></td>
        <td><%= task.salary %></td>
        <td><%= task.correction_charge %></td>
        <td><%= task.barter %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

